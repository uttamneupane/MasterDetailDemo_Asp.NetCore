@model Entities.Models.Stock
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers


@{

	ViewBag.Title = "Create Stock";
	//Layout = "_Layout";
}

<div class="form-horizontal">
	<h3>@ViewBag.Title</h3>
	<a asp-action="Index" asp-controller="Stock">Back To Index</a>
	<hr />
	<div class="col-sm-12">
		<form method="post" asp-action="Create" asp-controller="Stock" id="CreateForm">
			<div class="hidden">
				<label asp-for="Id" class="hidden"></label>
				<input type="text" asp-for="Id" value="0" />
			</div>

			<div class="form-group col-sm-12">
				<div class="col-sm-2">
					<label asp-for="StockName"></label>
				</div>
				<div class="col-sm-4">
					<input type="text" asp-for="StockName" />
				</div>
				@*<span asp-validation-for="StockName" class="text-danger"></span>*@
			</div>
			<div class="form-group col-sm-12">
				<div class="col-sm-2">
					<label asp-for="StockSymbol"></label>
				</div>
				<div class="col-sm-2">
					<input type="text" asp-for="StockSymbol" />
				</div>
				@*<span asp-validation-for="StockSymbol" class="text-danger"></span>*@
			</div>
			<div class="hidden">
				<label asp-for="EntryUserId"></label>
				<input type="text" asp-for="EntryUserId" value="12" />
				@*<span asp-validation-for="EntryUserId" class="text-danger"></span>*@
			</div>
			<div class="hidden">
				<label asp-for="EntryDate"></label>
				<input type="text" asp-for="EntryDate" value="2017-10-10" />
				@*<span asp-validation-for="EntryDate" class="text-danger"></span>*@
			</div>
			<div>
				<input type="submit" id="btnSubmit" value="Create" class="btn btn-facebook" />
			</div>


			<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
				<div class="modal-dialog" role="document">
					<div class="modal-content">
						<div class="modal-header">
							<button type="button" class="close" data-dismiss="modal" aria-label="Close">
								<span aria-hidden="true">&times;</span>
							</button>
							<h4 class="modal-title" id="myModalLabel">Oopss</h4>
						</div>
						<div class="modal-body" id="frmEmp">
							<div asp-validation-summary="All" class="text-danger">

							</div>
						</div>
						<div class="modal-footer">
							<input type="submit" class="btn btn-primary" data-dismiss="modal" value="Ok" />
						</div>
					</div>
				</div>
			</div>
		</form>
	</div>

</div>

<script src="~/js/jquery.min.js"></script>
<script type="text/javascript">
	$(document).ready(function () {
		//jQuery.validator.unobtrusive.parse();
		$("#btnSubmit").click(function (data, index) {
			if (!$("#CreateForm").valid()) {
				$("#myModal").modal();
			}
		});
	});
</script>