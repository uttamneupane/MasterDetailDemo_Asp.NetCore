@model IEnumerable<Entities.Models.Stock>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
	ViewBag.Title = "List Of Stock";
	//Layout = "_Layout";
}

<h3>@ViewBag.Title</h3>
<a asp-action="Create" asp-controller="Stock">Create Stock</a>
<div>
	<table class="table table-bordered">
		<thead>
			<tr>
				<th>
					@Html.DisplayNameFor(model => model.Id)
				</th>
				<th>
					@Html.DisplayNameFor(model => model.StockName)
				</th>
				<th>
					@Html.DisplayNameFor(model => model.StockSymbol)
				</th>
				<th>
					@Html.DisplayNameFor(model => model.EntryDate)
				</th>
				<th>
					@Html.DisplayNameFor(model => model.EntryUserId)
				</th>
				<th>
					Action
				</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var item in Model)
			{
				<tr>
					<td>
						@Html.DisplayFor(modelitem => item.Id)
					</td>
					<td>
						@Html.DisplayFor(modelitem => item.StockName)
					</td>
					<td>
						@Html.DisplayFor(modelitem => item.StockSymbol)
					</td>
					<td>
						@Html.DisplayFor(modelitem => item.EntryDate)
					</td>
					<td>
						@Html.DisplayFor(modelitem => item.EntryUserId)
					</td>
					<td>
						<a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
						<a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
					</td>

				</tr>
			}
		</tbody>
	</table>
</div>