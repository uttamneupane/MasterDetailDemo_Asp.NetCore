@model Entities.Models.Stock
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
	ViewBag.Title = "Modify Stock";

}
<h3>@ViewBag.Title</h3>
<div class="row">

	<hr />
	<div class="col-md-12 form-horizontal">
		<form method="post" asp-action="Edit" asp-controller="Stock">
			<div class="form-group hidden">
				<label asp-for="Id" class="hidden"></label>
				<input type="text" asp-for="Id" />
			</div>
			<div class="form-group col-sm-12 ">
				<div class="col-sm-2">
					<label asp-for="StockName"></label>
				</div>
				<div class="col-sm-3">
					<input type="text" asp-for="StockName" />
				</div>
				<span asp-validation-for="StockName" class="text-danger"></span>
			</div>
			<div class="form-group col-sm-12 ">
				<div class="col-sm-2">
					<label asp-for="StockSymbol"></label>
				</div>
				<div class="col-sm-4">
					<input type="text" asp-for="StockSymbol" />
				</div>
				<span asp-validation-for="StockSymbol" class="text-danger"></span>
			</div>
			<div class="form-group hidden ">
				<label asp-for="EntryUserId"></label>
				<input type="text" asp-for="EntryUserId" />
				<span asp-validation-for="EntryUserId" class="text-danger"></span>
			</div>
			<div class="form-group hidden ">
				<label asp-for="EntryDate"></label>
				<input type="text" asp-for="EntryDate" />
				<span asp-validation-for="EntryDate" class="text-danger"></span>
			</div>
			<div>
				<input type="submit" value="Edit" class="btn btn-facebook" />
				<input type="submit" value="Cancel" class="btn btn-default" asp-action="Index" asp-controller="Stock" />
			</div>

		</form>
	</div>

</div>