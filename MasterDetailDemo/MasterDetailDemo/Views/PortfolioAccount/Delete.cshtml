@model Entities.Models.PortfolioAccount
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
	ViewBag.Title = "Confirm to Delete Portfolio Account ?";

}
<h3>@ViewBag.Title</h3>
<div class="col-md-3">
	<form method="post" asp-action="Delete" asp-controller="PortfolioAccount">
		<table class="table">
			<tr>
				<td>
					@Html.DisplayNameFor(modelItem => Model.Id)
				</td>
				<td>
					@Html.DisplayFor(modelItem => Model.Id)
				</td>
			</tr>
			<tr>
				<td>
					@Html.DisplayNameFor(modelItem => Model.AccountNumber)
				</td>
				<td>
					@Html.DisplayFor(modelItem => Model.AccountNumber)
				</td>
			</tr>
			<tr>
				<td>
					@Html.DisplayNameFor(modelItem => Model.AccountName)
				</td>
				<td>
					@Html.DisplayFor(modelItem => Model.AccountName)
				</td>
			</tr>
			<tr>
				<td>
					@Html.DisplayNameFor(modelItem => Model.EntryUserId)
				</td>
				<td>
					@Html.DisplayFor(modelItem => Model.EntryUserId)
				</td>
			</tr>
			<tr>
				<td>
					@Html.DisplayNameFor(modelItem => Model.EntryDate)
				</td>
				<td>
					@Html.DisplayFor(modelItem => Model.EntryDate)
				</td>
			</tr>
		</table>
		<div>
			<input type="submit" value="Confirm" class="btn btn-danger" asp-route-id="@Model.Id" />
			<input type="submit" value="Cancel" class="btn btn-default" asp-action="Index" asp-controller="PortfolioAccount" />
		</div>
	</form>
</div>